{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "noUnusedLocals": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "declaration": true,
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "newLine": "LF",
    "outDir": "./dist",
		"baseUrl": "src",
    "paths": {
      "@/*": ["./src/*"],
    }
  },
	"include": ["src"],
	"exclude": ["./node_modules", "./dist", "src/**/*.test.ts"],
}